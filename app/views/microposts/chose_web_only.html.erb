<% provide(:title, "Offer your Heart") %>
<section id="heart-preview-header-space">
  <div class="col-xs-12 col-sm-12 col-sm-offset-0">
    <h1 id="preview-title">Offer your Heart</h1>
  </div> 
  
</section>
<div class="centered" style="width: 300px; margin: auto">
  <%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
</div>
<section style="background-color: #26292e;">
  <div class="col-xs-12 col-sm-12 col-sm-offset-0">
    <div class="main-logo" id="heart-preview"> 
     <%= f.hidden_field :launch_into_space, value: false %> 
     <%= f.hidden_field :send_email_to_partner, value: false %>        
     <%= f.hidden_field :send_paper_copy, value: false %>        
     <%= f.text_area :content, value: "Here is a love message inspiration you can freely edit...\n\nI want to give you my heart and soul. I don't care about anything else in the world because I am in love with you. I love you. I am getting butterflies in my stomach just at the thought of seeing you again. You have made all of my dreams come true and I can't imagine spending time with anyone else.\n\nI could not ask for more. I am the luckiest person in the world...", class: 'form-control', rows: "20", placeholder: "Your love message" %>
     <%= f.text_area :extra, value: "Love always,", class: 'form-control', placeholder: "Some more sweet words..." %>
     <%= f.text_area :name1, class: 'form-control', placeholder: "Your love's name" %>
     <div class="centered" style="font-size: 30px; color: #fff; font-family: quicksand;">&amp;</div>
     <%= f.text_area :name2, class: 'form-control', placeholder: "Your name" %>

     <div class="centered" style="display: inline-blocks;">
      <%= f.submit "Save", class: "btn btn-default pull-right", id: "btn-reserve-preview"%>
      <% if signed_in?%>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <% else%>
      <% redirect_to signup_path %>
      <% end %>
      <% @random_secret= random_key %>
      <%= f.hidden_field :assigned_secret, value: @random_secret%>
      <%= f.hidden_field :secret_key, value: @random_secret%>

    </div>            <%end%>
  </div>
</div>
</section>


</section>
<section id="banner-love-letter">
  <div class="row" style="margin-top:30px;">
    <div class="col-xs-2 col-sm-0 col-md-1"></div>
    <div class="col-xs-8 col-sm-4 col-md-3" style="margin-top: -1%">
      <%= image_tag "heart-wall.png"%>  
    </div>
    <div class="col-xs-2 col-sm-1 col-md-1"></div>
    <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="title-premium">Heart Wall</div>
    <ul id="bullet-description4">
     <li>You shape your love words on the mission's website.</li>
<li>Your love message will be displayed on the Heart Wall.</li>
<li>Your names will be sealed together on a letter and placed in the satellite to be rocketed into space.</li>
<li>The secret key assigned to your love message will give you a private access to your message on the Heart Wall.</li>
<li>You will be able to follow the satellite and your message's position on the website and on the mobile application. </li>
</ul>
<div id="conclusion-about">
        Your love message will travel above your head for ever!
      </div>
    </div>
  </div>
</section>

