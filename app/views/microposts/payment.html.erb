
<section id="home">
  <div class="center hero-unit">
    <h1 id="home-title" style="margin-top: -50px; margin-bottom:50px;">Space Mission Payment</h1>

    <% if @micropost.launch_into_space? %>
    <h2>
    </h2>

    <div class="centered" style="margin-top: 70px;">
      <%= image_tag("rocket.png", style: "width: 20%; margin-left: auto; margin-right: 100px; min-width: 200px;")%>
      <%= image_tag("orbiting-hearts.png", style: "width: 20%; margin-left: 100px; margin-right: auto; min-width: 200px;")%>
    </div>
    <% end %>

    <h1 id="preview-title" style="margin-bottom: 70px;"><%= @micropost.secret_key.to_s %></h1>
    <div class="col-xs-12 col-sm-12 col-sm-offset-0">
      <div class="main-logo" id="heart-display-standard"> 
        <div class="centered" id="heart-display-content">      
          <%= simple_format(@micropost.content) %>
        </div>
        <div class="centered" id="heart-display-extra"><%= @micropost.extra.to_s %></div>
        <div class="centered" id="heart-display-name1"><%= @micropost.name1.to_s %></div>
        <div class="centered" style="font-size: 30px; color: #fff; font-family: quicksand;">&amp;</div>
        <div class="centered" id="heart-display-name2"><%= @micropost.name2.to_s %></div>

      </div>
    </div>

    <% if current_user.admin %>
    <%= link_to "delete", @micropost, method: :delete,
    data: { confirm: "You sure?" },
    title: @micropost.content %>
    <% end %>
    <%unless @user.name == "temporary" || @user.email == "anonymous@love-space-mission.com"%>
    <span class="content"><h2>Your login information</h2></span>
    <span class="content"><h2 style="color: #fff;"><%= @user.name %></h2></span>
    <span class="content"><h2 style="color: #fff;"><%= @user.email %></h2></span>
    <% end %>
  </div>


  <h1>$ <%= @micropost.standard_price.to_s %></h1>
  <h2 style="margin-bottom:-40px;">By clicking the here under Checkout button, you automatically confirm that<br /> you have read, understood and accepted the <%= link_to "terms of use", help_path%>.</h2>
  <%= render "payment/paypal_standard_heart_button"%>
  <span class="content"><h2>Your secret key should be functionnal maximum 24 hours after your checkout.</h2></span>
</section>

