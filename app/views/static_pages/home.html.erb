
<section id="home">

  <div class="center hero-unit">
    <div class="container">
      <div class="row">
        <h1 id="home-title">Love Space Mission</h1>
        <h2 style="font-size: 1.5em; margin-top:0px;">
            We rocket a proof of your love into space to eternalize it!
          </h2>
        <div class="col-xs-0 col-sm-4 col-md-4" id="home-page-top-left">
        </div>
        <div class="col-xs-0 col-sm-4 col-md-4" id="home-page-top-middle">
          <%= form_for @home_search, url: { action: "search_with_secret_key"} do |f| %>
          <%= f.text_field :secret_key, class: 'form-control', placeholder: "Secret key" %>
          <% end %>
        </div>
        <div class="col-xs-0 col-sm-4 col-md-4" id="home-page-top-right">
        </div>

      </div>
      <div class="row">
        <div class="col-xs-0 col-sm-4 col-md-4">
          <h2 class="caption">
            You write the message, we take care of everything else. <br />You will remember it all your life!
          </h2>
        </div>
        <div class="col-xs-0 col-sm-4 col-md-4">
        </div>
        <div class="col-xs-0 col-sm-4 col-md-4">
          <h2 class="caption">
            You will be able to see your love message on its 90 minutes orbit on our iPad app.
          </h2>
        </div>

      </div>
    </div>

    <div class="row">
    <%= link_to "Know the secret", choice_path, class: "btn btn-primary bigger-hover", id: "btn-home-info" %>
    <%= link_to "Get in the spaceship", choice_path, class: "btn btn-primary bigger-hover", id: "btn-home-choice" %>
    </div>
  </div> 
</section>


<section id="heart-display">
  <div class="container">
    <%= render 'shared/heart_display' %>
  </div>
</section>

