
<section id="home">

  <div class="center hero-unit">
    <div class="container">
      <div class="row">
       <!--  <h1 id="home-title">Love Space Mission</h1> -->
       <h1 style="font-size: 3em; margin-top:-120px; margin-bottom: 50px; color: #fff;">
        <br />Eternalize your love into space !<br />Show it on the Heart Wall 
      </h1>

      <div class="col-xs-0 col-sm-4 col-md-4">
        <div id="home-page-top-left">
        </div>
        <h2 class="caption" style="line-height: 1.4;">
         You write your love message. </br>We rocket it into space for ever.
       </h2>
     </div>

     <div class="col-xs-0 col-sm-4 col-md-4" id="home-page-top-middle">
      <%= form_for @home_search, url: { action: "search_with_secret_key"} do |f| %>
      <%= f.text_field :secret_key, class: 'form-control', placeholder: "Secret key", style: "width: 80% !important;" %>
      <% end %>
    </div>
    <div class="col-xs-0 col-sm-4 col-md-4">
      <div id="home-page-top-right">
      </div>
      <h2 class="caption" style="line-height: 1.4;">
        You can be part of this unique space mission!</br> Only a few people will be able to book a space aboard the satellite.
      </h2>
    </div>

  </div>
</div>

<div class="row">
  <div class="col-xs-0 col-sm-1 col-md-2">
  </div>
  <div class="col-xs-12 col-sm-5 col-md-4">
    <%= link_to "Know the secret", about_path, class: "btn btn-primary bigger-hover", id: "btn-home-info" %>
  </div>
  <div class="col-xs-12 col-sm-5 col-md-4">
    <% if signed_in? %>
    <%= link_to "Get in the spaceship", choice_path, class: "btn btn-primary bigger-hover", id: "btn-home-choice" %>  
    <% else %>
    <%= form_for(@user) do |f| %>
    <%= f.hidden_field :name, value: "temporary" %>
    <%= f.hidden_field :email, value: (1_000 + Random.rand(10_000_000)).to_s << "@example.com" %>
    <%= f.hidden_field :password, value: "password" %>
    <%= f.hidden_field :password_confirmation, value: "password" %>
    <%= f.hidden_field :redirect_to, value: "choice-page" %>
    <%= f.submit "Get in the spaceship", class: "btn btn-large btn-primary bigger-hover", id: "btn-home-choice" %>
    <% end %>

    <% end %>
  </div>
  <div class="col-xs-0 col-sm-1 col-md-2">
  </div>
</div>
</div> 
</section>


<!-- FACEBOOK - TWITTER - MASONRY BUTTONS -->
